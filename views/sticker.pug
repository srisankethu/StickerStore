doctype html
html
  head
    title StickerStore
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js")
  body
    nav(class="navbar navbar-expand-sm bg-light")
      div(class="container-fluid")
        div(class="navbar-header")
          a(class="navbar-brand" href = "/") Dashboard
        ul(class="navbar-nav")
          li(class="nav-item")
            a(class="nav-link" href="/marketplace") Marketplace
          li(class="nav-item")
            a(class="nav-link" href="/login") LogIn

    div(class = "card col-md-2")
      h5(class = "text-right") #{sticker.cost} ETH
      img(src= sticker.image, alt="No sticker image found" class = "col-md-10")
      h4(class = "text-center") #{sticker.name}
      button(type="submit" class = "btn btn-secondary") Buy/Sell
